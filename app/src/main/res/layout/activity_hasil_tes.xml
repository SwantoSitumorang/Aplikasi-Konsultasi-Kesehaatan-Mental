<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilTesActivity"
    android:background="@drawable/background_2"
    android:orientation="vertical"
    android:gravity="center">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/orange">
    <TextView
        android:id="@+id/txtHasilTes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:text="Hasil Tes : "
        android:padding="32dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnKonsultasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHasilTes"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Konsultasi"
        android:backgroundTint="@color/merahmuda"/>
    <Button
        android:id="@+id/btnKembaliBeranda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnKonsultasi"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Kembali Ke Beranda"
        android:backgroundTint="@color/birulangit"/>

</LinearLayout>